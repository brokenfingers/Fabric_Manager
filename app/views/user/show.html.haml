%body.user_show
  = render 'shared/top_menu_bar'

  = render 'shared/side_menu_bar'

  %div.jumbotron_show
    %div.icon-menu
      %i.glyphicons.icon-list Menu

    %table#fabrics.table.table-hover
      %thead
        %tr
          %th Color
          %th Serial
          %th Quantity
          %th Price
          %th More Info
      %tbody
        - if @fabrics.any?
          - @fabrics.each do |fabric|
            %tr
              %td= fabric.color 
              %td= fabric.serial
              %td= fabric.quantity
              %td= fabric.price
              %td= link_to "More Information"

    %p.create_button Click me!
    %div.fabric_creation_form
      = simple_form_for :fabrics, remote: true, :url => { :action => "create", :controller => :fabrics } do |f|


        = f.button :submit